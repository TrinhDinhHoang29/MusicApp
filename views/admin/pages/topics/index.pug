extends ../../layouts/default.pug

block main
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../../partials/topbar.pug

      .container.text-center
        h2.m-3 Quản lý chủ đề

      .card.my-3
        h5.card-header Cập nhật năng cao
        .card-body
            .row
                .col-8
                    select(name="" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example")
                      option(value="" selected disabled) --- Chỉnh sửa nhiều chủ đề ---
                      option(value="")
                    button(class="btn btn-primary") Chấp nhận
                .col-4
                  a(href="/admin/topics/create" class="btn btn-outline-success") + Thêm chủ đề

      table(class="table table-hover m-3 text-center")
        thead 
          tr 
            th 
              input(type="checkbox", name="")
            th STT
            th Avatar
            th Tiêu đề 
            th Trạng thái 
            th Hành động
        tbody 
          tr
            td 
              input(type="checkbox", name="")
            td 1
            td 2
            td 3 
            td 4
            td 
              a(href="" class="btn btn-secondary mx-1") Chi tiết
              a(href="" class="btn btn-warning mx-1") Sửa
              a(href="" class="btn btn-danger mx-1") Xoá 
              

      // Footer
      footer.sticky-footer.bg-white
        .container.my-auto
          .copyright.text-center.my-auto
            span | Copyright © Your Website 2020

  // Scroll to Top Button
  a#scrollToTopButton.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up

  // Logout Modal
  .modal.fade#logoutModal(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5.modal-title#exampleModalLabel Ready to Leave?
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
        .modal-body Select "Logout" below if you are ready to end your current session.
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
          a.btn.btn-primary(href='login.html') Logout
